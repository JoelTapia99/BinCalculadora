<%- include('partials/head'); -%>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand">Calculadora</a>
            <!-- <img src="../assets/logo-claro-2.png" class="img-fluid" alt="mi logo"> -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse d-flex" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page">Autor: Joel Tapia</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container bg-light mt-3 p-4 rounded">
        <div class="row">
            <div class="col">
                <% if (isValidate==true) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        El número ingresado no correcto.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>

                        <%- include('form'); -%>
            </div>
            <% if (list.length >= 1) { %>
                <div class="col-5">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Número Ingresado</th>
                                <th scope="col">Número Convertido</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i < list.length; i++){ %>
                                <tr>
                                    <th scope="row">
                                        <%= i%>
                                    </th>
                                    <td>
                                        <%= list[i].ingresado %>
                                    </td>
                                    <td>
                                        <%= list[i].convertido %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('partials/footer'); -%>