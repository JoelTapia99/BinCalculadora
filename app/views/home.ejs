    <div class="container bg-light mt-3 p-4 rounded">
        <div class="row">
            <div class="col-7">
                <%- include('form'); -%>
            </div>
            <div class="col">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Número Ingresado</th>
                            <th scope="col">Número Convertido</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < list.length; i++){ %>
                            <tr>
                                <th scope="row">
                                    <%= i%>
                                </th>
                                <td>
                                    <%= list[i].ingresado %>
                                </td>
                                <td>
                                    <%= list[i].convertido %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>        
    </div>

